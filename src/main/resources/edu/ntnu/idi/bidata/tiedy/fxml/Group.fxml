                    <graphic>
                        <ImageView fitHeight="64.0" fitWidth="64.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../images/buttons/HomeButton.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Button layoutX="158.0" layoutY="20.0" mnemonicParsing="false" prefHeight="64.0" prefWidth="64.0"
                        style="-fx-background-color: fff8dc;">
                    <graphic>
                        <ImageView fitHeight="64.0" fitWidth="64.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../images/buttons/StatsButton.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Button fx:id="newTaskButton" layoutX="255.0" layoutY="21.0" mnemonicParsing="false" onAction="#addTask"
