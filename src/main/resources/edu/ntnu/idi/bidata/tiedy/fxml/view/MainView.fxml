<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="800.0" prefWidth="1000.0" styleClass="root" stylesheets="@../../css/style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.ntnu.idi.bidata.tiedy.frontend.controller.MainController">
    <top>
        <fx:include fx:id="menuBar" source="../component/MenuBar.fxml" />
    </top>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
   <center>
      <VBox maxWidth="1680.0" prefHeight="652.0" prefWidth="840.0" BorderPane.alignment="CENTER">
         <children>
            <HBox prefHeight="70.0" prefWidth="848.0">
               <children>
                  <HBox fx:id="mondayContainer">
                     <children>
                        <ImageView fitHeight="150.0" fitWidth="110.0" pickOnBounds="true" preserveRatio="true">
                           <Image url="@../../images/labels/weekdays/MondayLabel.png" />
                        </ImageView>
                     </children>
                  </HBox>
                  <HBox fx:id="tuesdayContainer">
                     <children>
                        <ImageView fitHeight="150.0" fitWidth="110.0" pickOnBounds="true" preserveRatio="true">
                           <Image url="@../../images/labels/weekdays/TuesdayLabel.png" />
                        </ImageView>
                     </children>
                  </HBox>
                  <HBox fx:id="wednesdayContainer">
                     <children>
                        <ImageView fitHeight="150.0" fitWidth="110.0" pickOnBounds="true" preserveRatio="true">
                           <Image url="@../../images/labels/weekdays/WednesdayLabel.png" />
                        </ImageView>
                     </children>
                  </HBox>
                  <HBox fx:id="thursdayContainer">
                     <children>
                        <ImageView fitHeight="150.0" fitWidth="110.0" pickOnBounds="true" preserveRatio="true">
                           <Image url="@../../images/labels/weekdays/ThursdayLabel.png" />
                        </ImageView>
                     </children>
                  </HBox>
                  <HBox fx:id="fridayContainer">
                     <children>
                        <ImageView fitHeight="150.0" fitWidth="110.0" pickOnBounds="true" preserveRatio="true">
                           <Image url="@../../images/labels/weekdays/FridayLabel.png" />
                        </ImageView>
                     </children>
                  </HBox>
                  <HBox fx:id="saturdayContainer">
                     <children>
                        <ImageView fitHeight="150.0" fitWidth="110.0" pickOnBounds="true" preserveRatio="true">
                           <Image url="@../../images/labels/weekdays/SaturdayLabel.png" />
                        </ImageView>
                     </children>
                  </HBox>
                  <HBox fx:id="sundayContainer">
                     <children>
                        <ImageView fitHeight="64.0" fitWidth="110.0" pickOnBounds="true" preserveRatio="true">
                           <Image url="@../../images/labels/weekdays/SundayLabel.png" />
                        </ImageView>
                     </children>
                  </HBox>
               </children>
            </HBox>
            <HBox fx:id="dayViewContainer" prefHeight="574.0" prefWidth="904.0">
               <children>
                  <VBox fx:id="monday" />
                  <VBox fx:id="tuesday" />
                  <VBox fx:id="wednesday" />
                  <VBox fx:id="thursday" />
                  <VBox fx:id="friday" />
                  <VBox fx:id="saturday" />
                  <VBox fx:id="sunday" />
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
   <right>
      <VBox minWidth="80.0" prefHeight="652.0" prefWidth="120.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="nextButton" mnemonicParsing="false" onAction="#onNextButtonPressed">
               <graphic>
                  <ImageView fitHeight="150.0" fitWidth="64.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../images/buttons/NextButton.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button fx:id="prevButton" mnemonicParsing="false" onAction="#onPrevButtonPressed">
               <graphic>
                  <ImageView fitHeight="150.0" fitWidth="64.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../images/buttons/PreviousButton.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button fx:id="weekButton" mnemonicParsing="false" onAction="#onWeekButtonPressed">
               <graphic>
                  <ImageView fitHeight="32.0" fitWidth="64.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../images/labels/WeekLabel.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Label fx:id="yearTracker" prefHeight="24.0" prefWidth="56.0" />
            <Label fx:id="startOfWeekLabel" prefHeight="24.0" prefWidth="75.0" />
            <Label prefHeight="24.0" prefWidth="53.0" text="    |" />
            <Label fx:id="endOfWeekLabel" prefHeight="24.0" prefWidth="75.0" />
            <Label fx:id="weekNumberDisplay" prefHeight="24.0" prefWidth="75.0" />
         </children>
      </VBox>
   </right>
</BorderPane>
