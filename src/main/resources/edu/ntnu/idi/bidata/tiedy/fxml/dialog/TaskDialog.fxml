<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<BorderPane prefHeight="200.0" prefWidth="200.0" xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.ntnu.idi.bidata.tiedy.fxml.dialog.TaskDialog">
    <center>
        <VBox alignment="CENTER" prefHeight="274.0" prefWidth="331.0" spacing="15.0" styleClass="login-container"
              BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>
            <children>
                <HBox styleClass="login-field-container">
                    <children>
                        <ImageView fitHeight="40.0" fitWidth="120.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../../images/lables/UsernameLabel.png"/>
                            </image>
                        </ImageView>
                        <Region minWidth="10.0" HBox.hgrow="ALWAYS"/>
                        <TextField id="usernameField" fx:id="usernameField" promptText="Username"
                                   styleClass="login-field"/>
                    </children>
                </HBox>
                <HBox styleClass="login-field-container">
                    <children>
                        <ImageView fitHeight="40.0" fitWidth="120.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../../images/lables/PasswordLabel.png"/>
                            </image>
                        </ImageView>
                        <Region minWidth="10.0" HBox.hgrow="ALWAYS"/>
                        <PasswordField id="passwordField" fx:id="passwordField" promptText="Password"
                                       styleClass="login-field"/>
                    </children>
                </HBox>
                <HBox alignment="CENTER" spacing="20.0">
                    <children>
                        <Button id="loginButton" defaultButton="true" mnemonicParsing="false" onAction="#loginUser"
                                styleClass="transparent-button">
                            <graphic>
                                <ImageView fitHeight="32.0" fitWidth="64.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../../images/buttons/LoginButton_32px.png"/>
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#goToRegisterPage" styleClass="transparent-button">
                            <graphic>
                                <ImageView fitHeight="40.0" fitWidth="160.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../../images/buttons/NoAccountSignUpHereButton.png"/>
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                    </children>
                </HBox>
                <HBox alignment="BOTTOM_RIGHT" VBox.vgrow="ALWAYS"/>
            </children>
        </VBox>
    </center>
    <bottom>
        <Button mnemonicParsing="false" onAction="#exit" styleClass="transparent-button" BorderPane.alignment="CENTER">
            <graphic>
                <ImageView fitHeight="32.0" fitWidth="64.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../../images/buttons/ExitButton.png"/>
                    </image>
                </ImageView>
            </graphic>
        </Button>
    </bottom>
</BorderPane>
