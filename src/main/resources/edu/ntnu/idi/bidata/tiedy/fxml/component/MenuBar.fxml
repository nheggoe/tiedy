<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<HBox fx:id="menuBar" styleClass="menu-bar" stylesheets="@../../css/style.css" xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="edu.ntnu.idi.bidata.tiedy.frontend.controller.MenuBarController">
    <!-- Left aligned section -->
    <HBox fx:id="leftSection" styleClass="menu-bar-left-section" HBox.hgrow="ALWAYS">
        <Button alignment="CENTER" contentDisplay="GRAPHIC_ONLY" mnemonicParsing="false" onAction="#onHomeButtonPress"
                styleClass="menu-bar-item">
            <graphic>
                <ImageView fitHeight="64.0" fitWidth="64.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../../images/buttons/HomeButton.png"/>
                    </image>
                </ImageView>
            </graphic>
        </Button>
        <Button mnemonicParsing="false" onAction="#onStatisticsButtonPress" styleClass="menu-bar-item">
            <graphic>
                <ImageView fitHeight="64.0" fitWidth="64.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../../images/buttons/StatsButton.png"/>
                    </image>
                </ImageView>
            </graphic>
        </Button>
        <Button mnemonicParsing="false" onAction="#onNewTaskButtonPress" styleClass="menu-bar-item">
            <graphic>
                <ImageView fitHeight="64.0" fitWidth="64.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../../images/buttons/CreateTaskButton.png"/>
                    </image>
                </ImageView>
            </graphic>
        </Button>
        <Button alignment="CENTER" contentDisplay="GRAPHIC_ONLY" layoutX="10.0" layoutY="10.0" mnemonicParsing="false"
                onAction="#onGroupButtonPress" styleClass="menu-bar-item">
            <graphic>
                <ImageView fx:id="groupButton" fitHeight="77.0" fitWidth="77.0" pickOnBounds="true"
                           preserveRatio="true">
                    <image>
                        <Image url="@../../images/icons/groupIcon.png"/>
                    </image>
                </ImageView>
            </graphic>
        </Button>
        <Button mnemonicParsing="false" onAction="#onProfileButtonPress" styleClass="menu-bar-item">
            <graphic>
                <ImageView fx:id="profileButton" fitHeight="64.0" fitWidth="64.0" pickOnBounds="true"
                           preserveRatio="true">
                    <image>
                        <Image url="@../../images/buttons/ProfileButton.png"/>
                    </image>
                </ImageView>
            </graphic>
        </Button>
    </HBox>

    <!-- Right aligned section -->
    <HBox fx:id="rightSection" styleClass="menu-bar-right-section">
        <MenuButton fx:id="taskFilter" mnemonicParsing="false" styleClass="back-button">
            <items>
                <MenuItem fx:id="allTasks" mnemonicParsing="false" text="All"/>
                <MenuItem fx:id="openTasks" mnemonicParsing="false" text="Open"/>
                <MenuItem fx:id="inProgressTasks" mnemonicParsing="false" text="In Progress"/>
                <MenuItem fx:id="postponedTasks" mnemonicParsing="false" text="Postponed"/>
                <MenuItem fx:id="closedTasks" mnemonicParsing="false" text="Closed"/>
            </items>
            <graphic>
                <ImageView fitHeight="64.0" fitWidth="64.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../../images/buttons/FilterButton.png"/>
                    </image>
                </ImageView>
            </graphic>
        </MenuButton>
    </HBox>
</HBox>
