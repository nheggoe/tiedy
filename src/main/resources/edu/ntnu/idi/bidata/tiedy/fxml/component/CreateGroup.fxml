<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox prefHeight="570.0" prefWidth="731.0" spacing="15" styleClass="container" xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="edu.ntnu.idi.bidata.tiedy.frontend.controller.GroupCreationController">
    <children>
        <VBox spacing="5">
            <children>
                <Label text="Group Name:"/>
                <TextField fx:id="groupNameTextField" promptText="Enter group name"/>
            </children>
        </VBox>
        <VBox spacing="5">
            <children>
                <Label text="Description:"/>
                <TextField fx:id="descriptionTextField" promptText="Enter description"/>
            </children>
        </VBox>
        <HBox alignment="CENTER" spacing="10">
            <children>
                <TableView fx:id="availableUsersTableView" prefHeight="383.0" prefWidth="247.0">
                    <columns>
                        <TableColumn fx:id="availableUsersColumn" prefWidth="199.0" style="-fx-pref-width: 100%;"
                                     text="Available Users"/>
                    </columns>
                </TableView>
                <VBox alignment="CENTER" prefHeight="491.0" prefWidth="81.0" spacing="10">
                    <children>
                        <Button fx:id="addButton" mnemonicParsing="false" text="Add &gt;&gt;"/>
                        <Button fx:id="removeButton" mnemonicParsing="false" text="&lt;&lt; Remove"/>
                    </children>
                </VBox>
                <TableView fx:id="selectedUsersTableView" prefHeight="383.0" prefWidth="274.0">
                    <columns>
                        <TableColumn fx:id="selectedUsersColumn" prefWidth="107.0" text="Selected Users"/>
                        <TableColumn fx:id="adminColumn" prefWidth="92.0" text="Admin"/>
                    </columns>
                </TableView>
            </children>
        </HBox>
        <HBox alignment="CENTER_RIGHT" spacing="10">
            <children>
                <Button fx:id="cancelButton" mnemonicParsing="false" text="Cancel"/>
                <Button fx:id="createGroupButton" defaultButton="true" mnemonicParsing="false" text="Create Group"/>
            </children>
        </HBox>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
</VBox>
