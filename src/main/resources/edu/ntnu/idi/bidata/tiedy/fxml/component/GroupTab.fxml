<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<VBox fx:id="root" prefHeight="570.0" prefWidth="731.0" spacing="15" styleClass="container"
      xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <VBox spacing="5">
            <children>
                <Label text="Group Name:"/>
                <TextField promptText="Enter group name"/>
            </children>
        </VBox>
        <VBox spacing="5">
            <children>
                <Label text="Description:"/>
                <TextField promptText="Enter description">
                    <contextMenu>
                        <ContextMenu>
                            <items>
                                <MenuItem mnemonicParsing="false" text="Unspecified Action"/>
                            </items>
                        </ContextMenu>
                    </contextMenu>
                </TextField>
            </children>
        </VBox>
        <ToolBar prefHeight="40.0" prefWidth="200.0">
            <items>
                <Region prefHeight="26.0" prefWidth="44.0"/>
                <TextField fx:id="searchBox" prefHeight="26.0" prefWidth="183.0" promptText="Search Tasks"/>
                <Button mnemonicParsing="false" text="Search"/>
            </items>
        </ToolBar>
        <HBox alignment="CENTER" spacing="10">
            <children>
                <TableView fx:id="tasksTable" prefHeight="383.0" prefWidth="247.0">
                    <columns>
                        <TableColumn fx:id="groupTasksColumn" minWidth="5.0" prefWidth="185.0" text="Tasks"/>
                    </columns>
                </TableView>
                <VBox alignment="CENTER" prefHeight="491.0" prefWidth="81.0" spacing="10">
                    <children>
                        <Button mnemonicParsing="false" text="Add &gt;&gt;"/>
                        <Button mnemonicParsing="false" text="&lt;&lt; Remove"/>
                    </children>
                </VBox>
                <TableView fx:id="groupLeaderBoard" prefHeight="383.0" prefWidth="274.0">
                    <columns>
                        <TableColumn fx:id="usernameColumn" prefWidth="107.0" text="Selected Users"/>
                        <TableColumn fx:id="levelColumn" prefWidth="92.0" text="Admin"/>
                    </columns>
                </TableView>
            </children>
        </HBox>
        <HBox alignment="CENTER_RIGHT" spacing="10">
            <children>
                <Button mnemonicParsing="false" text="Cancel"/>
                <Button defaultButton="true" mnemonicParsing="false" text="Create Group"/>
            </children>
        </HBox>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
</VBox>
